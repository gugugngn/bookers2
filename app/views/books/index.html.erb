<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-3">
     <%= render 'list', user: @user, book: @book %>
    </div>
    <div class="col-6 offset-1">

     <h1 class="pt-3">Books</h1>
        <div class = "body-text-small">
         <table>
          <thead>
             <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
             </tr>
            </thead>
            <tbody>
             <% @books.each do |book| %>
            <tr>
             <th><%= image_tag book.user.get_profile_image(100,100) %></th>  <!--投稿した本に紐づいているユーザのプロフィール画像を表示している-->
             <th><%= link_to book.title ,book_path(book.id) %></th>
             <th><%= book.body %></th>
            </tr>
            <% end %>
          </tbody>
         </table>
       </div>
     </div>
  </div>
</div>
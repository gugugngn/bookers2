
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
     <%= render 'list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>

       <table>
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
          <tr>
           <td><%= image_tag book.user.get_profile_image(100,100) %></td>  <!--投稿した本に紐づいているユーザのプロフィール画像を表示している-->
           <td><%= link_to book.title ,book_path(book.id) %></td>
           <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
       </table>    
     </div>
  </div>
</div>
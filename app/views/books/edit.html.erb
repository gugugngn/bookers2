<div class="container">
 <div class="row">
  <div class= "col-sm-12 px-5 px-sm-0">
<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>
 
    <p><label for="inputTitle">Title</label></p>
    <p><%= f.text_field :title, autofocus:true, id:"inputTitle" %></p>

    <p><label for="inputBody">Opinion</label></p>
    <p><%= f.text_area :body, autofocus:true, id:"inputBody" %></p>
 
 
    <p><%= f.submit "Update Book",class: "btn btn-success"%></p>
 
<% end %>

   <p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></p>
    </div>
 </div>
</div>
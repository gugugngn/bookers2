<div class="container">
 <div class="row">
  <div class= "col-sm-12 px-5 px-sm-0">
   <h1 class="pt-3">User info</h1>

 <% if @user.errors.any? %>
 <%= @user.errors.count %>error prohibited this obj from being saved:
 <ul>
  <% @user.errors.full_messages.each do|message| %>
    <li><%=message %></li>
  <% end %>
 </ul>
 <% end %>


<%= form_with model: @user do |f| %>
 <p><label for="inputName">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName" %></p>
 <p><label for="inputImage">image</label>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
 <p><label for="inputIntroduction">introduction</label>
 <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></p>
 <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
<% end %>
</div>
 </div>
</div>
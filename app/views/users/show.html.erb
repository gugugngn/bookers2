<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-3">
     <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-6 offset-1">
      <p></p>
      <h1>Books</h1>
      <div class = "body-text-small">
        <table>
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
         <tbody>
            <% @user_books.each do |book| %>
            <tr>
             <th><%= image_tag @user.get_profile_image(100,100) %></th>
             <th><%= link_to book.title ,book_path(book.id) %></th>
            <th><%= book.body %></th>
            </tr>
            <% end %>
         </tbody>
        </table>
       </div>
    </div>
  </div>
</div>


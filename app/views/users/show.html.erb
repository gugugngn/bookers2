<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">

      <h1 class="pt-3">Books</h1>
      <div class = "body-text-small">
        <table>
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
         <tbody>
            <% @user_books.each do |book| %>
            <tr>
             <th><%= link_to image_tag @user.get_profile_image(100,100) %></th>
             <th><%= link_to book.title ,book_path(book.id) %></th>
            <th><%= book.body %></th>
            </tr>
            <% end %>
         </tbody>
        </table>
       </div>
    </div>
  </div>
</div>


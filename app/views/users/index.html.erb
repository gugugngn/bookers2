<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-3">
   　<%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-6 offset-1">
       <p></p>
       <h1>Users</h1>
         <div class = "body-text-small">
         <table>
          <thead>
            <tr>
             <th>image</th>
             <th>name</th>
             <th> </th>
            </tr>
           </thead>
           <tbody>
            <% @users.each do |user| %>
            <tr>
             <th><%= image_tag user.get_profile_image(100,100) %></th>  <!--投稿した本に紐づいているユーザのプロフィール画像を表示している-->
             <th><%= user.name %></th>
             <th><%= link_to "Show", user_path(user.id) %> </th>
            </tr>
            <% end %>
           </tbody>
           </div>
         </table>
      </div>
   </div>
</div>
